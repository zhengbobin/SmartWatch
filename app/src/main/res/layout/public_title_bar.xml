<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_rl"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="@color/white" >

    <!-- 返回按钮 -->
    <ImageButton
        android:id="@+id/imageButton_titleBarLeft"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:src="@drawable/selector_return"
        android:background="@null" />

    <TextView
        android:id="@+id/textView_titleBarLeft"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/common_text_gray_dark"
        android:textSize="@dimen/font_size_20"
        android:visibility="gone"
        android:text="返回"/>

    <!-- 标题 -->
    <TextView
        android:id="@+id/textView_titleBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/common_text_gray_dark"
        android:textSize="@dimen/font_size_20" />

    <ProgressBar
        android:id="@+id/progressBar_titleBarLoading"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/textView_titleBarTitle"
        android:indeterminate="true"
        android:visibility="gone" />

    <!-- 文字按钮 -->
    <TextView
        android:id="@+id/textView_titleBarRight"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/common_red"
        android:textSize="17sp"
        android:visibility="gone"
        />

    <!-- 右边的图片按钮 -->
    <ImageButton
        android:id="@+id/imageButton_titleBarRight"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textSize="14sp"/>

    <!-- 底部的横线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_line" />

</RelativeLayout>